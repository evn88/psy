datasource db {
  provider = "postgresql"
}

// Определение пути вывода для сгенерированного Prisma Client
generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  USER
  GUEST
}

/// Тип вопроса в опросе
enum QuestionType {
  SINGLE_CHOICE
  MULTI_CHOICE
  TEXT
  SCALE
}

/// Статус назначения опроса пользователю
enum AssignmentStatus {
  PENDING
  COMPLETED
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String          @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role            @default(GUEST)
  accounts      Account[]
  sessions      Session[]
  // Опционально для поддержки WebAuthn
  Authenticator Authenticator[]

  language String    @default("ru")
  theme    String    @default("system")
  lastSeen DateTime? @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Связи с системой опросов
  createdSurveys    Survey[]           @relation("SurveyCreator")
  surveyAssignments SurveyAssignment[]
  surveyComments    SurveyComment[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// Опционально для поддержки WebAuthn
model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}

model LoginAttempt {
  id        String   @id @default(cuid())
  email     String
  ip        String?
  createdAt DateTime @default(now())
}

// ============================================================
// Система опросов
// ============================================================

/// Опрос, созданный администратором
model Survey {
  id          String  @id @default(cuid())
  title       String
  description String?
  createdById String
  createdBy   User    @relation("SurveyCreator", fields: [createdById], references: [id], onDelete: Cascade)

  questions   SurveyQuestion[]
  assignments SurveyAssignment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/// Вопрос опроса
model SurveyQuestion {
  id       String       @id @default(cuid())
  surveyId String
  survey   Survey       @relation(fields: [surveyId], references: [id], onDelete: Cascade)
  text     String
  type     QuestionType
  options  Json? // Варианты ответа для SINGLE_CHOICE / MULTI_CHOICE / SCALE
  order    Int          @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/// Назначение опроса пользователю
model SurveyAssignment {
  id       String           @id @default(cuid())
  surveyId String
  survey   Survey           @relation(fields: [surveyId], references: [id], onDelete: Cascade)
  userId   String
  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  status   AssignmentStatus @default(PENDING)

  result SurveyResult?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([surveyId, userId])
}

/// Результат прохождения опроса
model SurveyResult {
  id           String           @id @default(cuid())
  assignmentId String           @unique
  assignment   SurveyAssignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  answers      Json // { questionId: answer }
  completedAt  DateTime         @default(now())

  comments SurveyComment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/// Комментарий администратора к результату опроса
model SurveyComment {
  id       String       @id @default(cuid())
  resultId String
  result   SurveyResult @relation(fields: [resultId], references: [id], onDelete: Cascade)
  adminId  String
  admin    User         @relation(fields: [adminId], references: [id], onDelete: Cascade)
  text     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
